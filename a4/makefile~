CC  = gcc
PORT=55163
CFLAGS= -DPORT=\$(PORT) -g -Wall

all: xmodemserver client1

xmodemserver: xmodemserver.o helper.o
	${CC} ${CFLAGS} -o $@ xmodemserver.o helper.o

client1: client1.o 
	${CC} ${CFLAGS} -o $@ client1.o

client1.o: client1.c crc16.h crc16.c 
	${CC} ${CFLAGS}  -c $^

xmodemserver.o: xmodemserver.c xmodemserver.h helper.c crc16.c crc16.h
	${CC} ${CFLAGS}  -c $^

helper.o: helper.c
	${CC} ${CFLAGS}  -c $^

%.o: %.c
	${CC} ${CFLAGS}  -c $<